@using Winston.Common

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Winston - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Winston", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @if (Request.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" data-toggle="dropdown" class="dropdown-toggle">User<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Users", "Index", "User", null, new { @class = "" })</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("New User", "Create", "User", null, new { @class = "" })</li>
                            </ul>
                        </li>
                        @if (User.IsInRole(UserRoles.Admin))
                        {
                        <li class="dropdown">
                            <a href="#" data-toggle="dropdown" class="dropdown-toggle">User Segment<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("User Segments", "Index", "UserSegment", null, new { @class = "" })</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("New User Segment", "Create", "UserSegment", null, new { @class = "" })</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" data-toggle="dropdown" class="dropdown-toggle">Offer<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Offers", "Index", "Offer", null, new { @class = "" })</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("New Offer", "Create", "Offer", null, new { @class = "" })</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" data-toggle="dropdown" class="dropdown-toggle">Voucher<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Vouchers", "Index", "Voucher", null, new { @class = "" })</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("New Voucher", "Create", "Voucher", null, new { @class = "" })</li>

                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" data-toggle="dropdown" class="dropdown-toggle">Key Account<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Key Accounts", "Index", "KeyAccount", null, new { @class = "" })</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("New Key Account", "Create", "KeyAccount", null, new { @class = "" })</li>
                            </ul>
                        </li>
                        }
                    </ul>
                }
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year NS Web Development</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/bootbox")
    @Scripts.Render("~/bundles/datepicker")
    @RenderSection("scripts", required: false)
</body>
</html>
