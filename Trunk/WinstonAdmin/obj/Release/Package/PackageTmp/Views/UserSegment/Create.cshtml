        //.on('changeDate', function (e) {
        //    $(this).datepicker('hide');
        //    $("#errorDateOfBirthFrom").addClass("hidden");
        //    $("#errorDateOfBirth").addClass("hidden");
        //})
        //.keydown(function () {
        //    $(this).datepicker('hide');
        //    $("#errorDateOfBirthFrom").addClass("hidden");
        //    $("#errorDateOfBirth").addClass("hidden");
        //});

        //// dateTo
        //$("#Value_DateOfBirthTo")
        //.prop("placeholder", dateformat.toUpperCase())
        //.datepicker({
        //    format: dateformat
        //})
        //.on('changeDate', function (e) {
        //    $(this).datepicker('hide');
        //    $("#errorDateOfBirthTo").addClass("hidden");
